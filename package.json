{
  "name": "oms",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "db:migrate": "cd packages/db && yarn prisma migrate dev --name init && cd ../..",
    "db:generate": "cd packages/db && yarn prisma generate && cd ../..",
    "db:seed": "cd packages/db && yarn prisma db seed && cd ../..",
    "db:show": "cd packages/db && yarn prisma studio && cd ../..",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "check-types": "turbo run check-types",
    "prepare": "husky install"
  },
  "devDependencies": {
    "husky": "^9.1.7",
    "prettier": "^3.5.1",
    "turbo": "^2.4.2",
    "typescript": "5.7.3"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": "eslint --fix",
    "*.{json,md,css,scss}": "prettier --write"
  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "yarn@1.22.22",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "dependencies": {
    "docker": "^1.0.0",
    "eslint": "^9.20.1",
    "husky": "^9.1.7",
    "lint-staged": "^15.4.3"
  }
}
